<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- The INTERNET permission is required for development. -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- Storage permissions for accessing device storage -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- For Android 10 and above (Scoped Storage changes) -->
    <application
        android:requestLegacyExternalStorage="true"
        android:label="social_media_app"
        android:icon="@mipmap/ic_launcher">

        <!-- Your app's activity and other components go here -->

    </application>

</manifest>
